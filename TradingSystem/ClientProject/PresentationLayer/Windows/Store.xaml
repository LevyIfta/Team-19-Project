<Window x:Class="WPF_Trial2.PresentationLayer.Windows.Store"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientProject.PresentationLayer.Windows"
        mc:Ignorable="d"
        Title="Store" Height="450" Width="800">
    <Grid>
        <Label x:Name="label" FontFamily="{StaticResource Caviar Dreams}" Content="Store Name:" Height="29" VerticalAlignment="Top"/>
        <Label x:Name="label1" Foreground="{StaticResource TextColorErrorU}" Content="{Binding Path=storemsg}" Margin="88,10,484,0" Height="29" VerticalAlignment="Top"/>

        <TextBox x:Name="storeName" Background="{StaticResource BackgroungTextBoxU}" BorderThickness="2" BorderBrush="Black" Text="{Binding storename, Mode=TwoWay}" Height="23" TextWrapping="Wrap" Margin="10,39,0,0" VerticalAlignment="Top" d:LayoutOverrides="Height" HorizontalAlignment="Left" Width="162" />
        <Button x:Name="button" Background="LightSlateGray" FontFamily="{StaticResource Buttom}" Content="establish" Click="button_Click" HorizontalAlignment="Left" Margin="117,83,0,0" Width="76" Height="21" VerticalAlignment="Top"/>

    </Grid>
</Window>
