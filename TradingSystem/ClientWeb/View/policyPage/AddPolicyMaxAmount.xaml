<Page x:Class="ClientWeb.View.policyPage.AddPolicyMaxAmount"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClientWeb.View.policyPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPolicyMaxAmount">

    <Grid  Background="LightBlue">
        <Button Content="Add policy" HorizontalAlignment="Left" Margin="339,269,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.491,3.256" Click="Button_Click"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="233,142,0,0" TextWrapping="Wrap" Text="{Binding maxAmount, Mode=TwoWay,   UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="230,189,0,0" TextWrapping="Wrap" Text="{Binding PolicyProduct, Mode=TwoWay,   UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120"/>
        <Label Content="choose max amount" HorizontalAlignment="Left" Margin="93,140,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.701,0.257"/>
        <Label Content="choose product" HorizontalAlignment="Left" Margin="122,187,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
